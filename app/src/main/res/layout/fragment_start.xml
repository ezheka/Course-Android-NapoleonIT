<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/screen1">

    <Button
        android:id="@+id/buttonGoTo7Day"
        android:layout_width="156dp"
        android:layout_height="34dp"
        android:layout_marginTop="8dp"
        android:background="#41081c"
        android:fontFamily="monospace"
        android:text="Сохранить"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/etLongitube"
        app:layout_constraintStart_toStartOf="@+id/etLatitude"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <EditText
        android:id="@+id/editTextTextCity"
        android:layout_width="337dp"
        android:layout_height="30dp"
        android:layout_marginBottom="8dp"
        android:background="@android:color/background_light"
        android:ems="10"
        android:fontFamily="monospace"
        android:gravity="center"
        android:inputType="text"
        android:maxLines="1"
        android:minLines="1"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias=".5"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etLongitube"
        android:layout_width="142dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/background_light"
        android:ems="10"
        android:fontFamily="monospace"
        android:gravity="center"
        android:inputType="numberSigned|numberDecimal"
        android:maxLines="1"
        android:minLines="1"
        android:textColor="#41081c"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/etLatitude"
        android:layout_width="142dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/background_light"
        android:ems="10"
        android:fontFamily="monospace"
        android:gravity="center"
        android:inputType="numberSigned|numberDecimal"
        android:maxLines="1"
        android:minLines="1"
        android:textColor="#41081c"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView4"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="261dp"
        android:layout_height="73dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="monospace"
        android:gravity="center"
        android:text="Введите ваш\nгород:"
        android:textColor="#41081c"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/editTextTextCity"
        app:layout_constraintEnd_toEndOf="@+id/editTextTextCity"
        app:layout_constraintStart_toStartOf="@+id/editTextTextCity" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="335dp"
        android:layout_height="69dp"
        android:layout_marginBottom="84dp"
        android:fontFamily="monospace"
        android:gravity="center"
        android:text="или координаты:\n(широта и долгота)"
        android:textColor="#41081c"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/editTextTextCity"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editTextTextCity"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="43dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:fontFamily="monospace"
        android:gravity="center"
        android:text=":"
        android:textColor="#41081c"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/etLongitube"
        app:layout_constraintStart_toEndOf="@+id/etLatitude"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="280dp"
        android:layout_height="78dp"
        android:layout_marginTop="4dp"
        android:fontFamily="monospace"
        android:gravity="center"
        android:text="Погода в вашем \nгороде"
        android:textColor="#41081c"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>